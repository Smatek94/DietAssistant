<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextPrimary" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextPrimary.Medium">
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="TextSecondary" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="TextSecondary.Medium">
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <dimen name="text_medium">20sp</dimen>
</resources>
